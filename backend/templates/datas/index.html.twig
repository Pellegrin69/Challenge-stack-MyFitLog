{% extends 'base.html.twig' %}

{% block title %}Datas index{% endblock %}

{% block body %}
    <h1>Datas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for data in datas %}
            <tr>
                <td>{{ data.id }}</td>
                <td>{{ data.date ? data.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ data.value }}</td>
                <td>
                    <a href="{{ path('app_datas_show', {'id': data.id}) }}">show</a>
                    <a href="{{ path('app_datas_edit', {'id': data.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_datas_new') }}">Create new</a>
{% endblock %}
