{% extends 'base.html.twig' %}

{% block title %}Datas{% endblock %}

{% block body %}
    <h1>Datas</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ data.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ data.date ? data.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ data.value }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_datas_index') }}">back to list</a>

    <a href="{{ path('app_datas_edit', {'id': data.id}) }}">edit</a>

    {{ include('datas/_delete_form.html.twig') }}
{% endblock %}
