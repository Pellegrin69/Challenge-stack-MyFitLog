{% extends 'base.html.twig' %}

{% block title %}DataTypes index{% endblock %}

{% block body %}
    <h1>DataTypes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for data_type in data_types %}
            <tr>
                <td>{{ data_type.id }}</td>
                <td>{{ data_type.name }}</td>
                <td>
                    <a href="{{ path('app_data_types_show', {'id': data_type.id}) }}">show</a>
                    <a href="{{ path('app_data_types_edit', {'id': data_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_data_types_new') }}">Create new</a>
{% endblock %}
