{% extends 'base.html.twig' %}

{% block title %}Goals index{% endblock %}

{% block body %}
    <h1>Goals index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Start_date</th>
                <th>End_date</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for goal in goals %}
            <tr>
                <td>{{ goal.id }}</td>
                <td>{{ goal.name }}</td>
                <td>{{ goal.description }}</td>
                <td>{{ goal.startDate ? goal.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ goal.endDate ? goal.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ goal.value }}</td>
                <td>
                    <a href="{{ path('app_goals_show', {'id': goal.id}) }}">show</a>
                    <a href="{{ path('app_goals_edit', {'id': goal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_goals_new') }}">Create new</a>
{% endblock %}
