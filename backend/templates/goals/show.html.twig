{% extends 'base.html.twig' %}

{% block title %}Goals{% endblock %}

{% block body %}
    <h1>Goals</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ goal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ goal.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ goal.description }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ goal.startDate ? goal.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ goal.endDate ? goal.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ goal.value }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_goals_index') }}">back to list</a>

    <a href="{{ path('app_goals_edit', {'id': goal.id}) }}">edit</a>

    {{ include('goals/_delete_form.html.twig') }}
{% endblock %}
